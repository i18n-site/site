{
  "$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
  "formatter": {
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noDoubleEquals": "off",
        "noCatchAssign": "off"
      },
      "security": {
        "noGlobalEval": "off"
      },
      "style": {
        "noParameterAssign": "off",
        "useNumberNamespace": "off",
        "useTemplate": "off",
        "useSingleVarDeclarator": "off"
      },
      "complexity": {
        "noForEach": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  }
}
